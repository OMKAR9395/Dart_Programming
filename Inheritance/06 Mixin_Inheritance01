import 'dart:io';
// Mixin rating system
mixin Rating {
  void giveRating(String to, int rating) {        ///method
    print("You rated $to with $rating stars.");
  }
}

// Base class: User
class User {
  String? name;

  void setUser(String username) {       ///method
    name = username;
  }

  void showUser() {   ///method
    print(" User: $name");
  }
}

// Child Class
class Customer extends User with Rating {
  void orderFood(String food) {     ///method
    writeln("Ordered: $food");
  }
}

void main() {     ///Entry point funnction

  print("\n---  Customer ---");
  Customer cust = new Customer();
  cust.setUser("Omkar");
  cust.showUser();
  cust.orderFood("Pizza");
  cust.giveRating("The Fork Caf√©", 5);

}
